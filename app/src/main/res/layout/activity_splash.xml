<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMainSpAc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMyColorGrey"
    android:orientation="vertical"
    tools:context="com.example.user.organizer.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMyColorGrey"
            android:src="@drawable/organizer_anim"
            tools:ignore="NestedWeights" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMyColorGrey"
            android:src="@drawable/football_anim"
            tools:ignore="NestedWeights" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMyColorGrey"
            android:src="@drawable/match_anim" />
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:layout_weight="1"
        android:background="@color/colorMyColorGrey"
        android:src="@drawable/juggling_ball" />

</LinearLayout>
