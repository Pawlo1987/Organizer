<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crop"
    android:orientation="vertical"
    tools:context="com.example.user.organizer.fragment.ShowAllEventsFragment">

    <Button
        android:id="@+id/btnMapShFiCaFr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="onClickShFiCaFr"
        android:text="Поля на карте"
        tools:ignore="OnClick" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMainShFiCaFr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager" />

</LinearLayout>
