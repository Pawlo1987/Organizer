<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.user.organizer.fragment.ShowAllEventsFragment">

    <TextView
        android:id="@+id/tvHeaderShAlEvAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/delius_swash_caps"
        android:text="@string/tvHeaderShAlEvFr"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
          android:id="@+id/rvMainShAlEvAc"
          android:background="@android:color/white"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layoutManager="LinearLayoutManager" >

      </android.support.v7.widget.RecyclerView>



</LinearLayout>
